<view>
  <swiper autoplay="{{true}}" interval="5000" duration="500" 
  indicator-dots="{{true}}"
  circular="{{true}}"
  indicator-active-color="white"
  >
    <block wx:for="{{imageUrls}}" wx:key="{{item.id}}">
      <swiper-item class="item">
        <image src="{{item}}" class="item-image"/>
      </swiper-item>
    </block>
  </swiper>
  <view class="reference">
    <block wx:for="{{reInfos}}" wx:key="{{item.id}}">
      <view class="refer-item">
        <reference class="refer" image="{{item.image}}" types.sync="{{item.types}}" url="{{item.url}}"></reference>
      </view> 
    </block>
  </view>
</view>

